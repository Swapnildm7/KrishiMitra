<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B3B3B3" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Card Background -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorCardBackground" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
