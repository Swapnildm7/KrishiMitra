<!-- res/layout/activity_admin_dashboard.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_admin"
    android:padding="16dp">

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/textViewWelcomeAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/admin"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Upload Crops Button -->
    <Button
        android:id="@+id/buttonUploadCrops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewWelcomeAdmin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#4CAF50"
        android:padding="12dp"
        android:text="@string/manageCrops"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- Manage Users TextView -->
    <TextView
        android:id="@+id/textViewManageUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonUploadCrops"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="12dp"
        android:text="@string/manageUsers"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewManageUsers"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#F44336"
        android:padding="12dp"
        android:text="@string/logout"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</RelativeLayout>
