<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_admin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/textViewWelcomeAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/admin"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Upload Crops Button -->
        <Button
            android:id="@+id/buttonUploadCrops"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewWelcomeAdmin"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif"
            android:padding="14dp"
            android:text="@string/manageCrops"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- List Crops Button -->
        <Button
            android:id="@+id/buttonListCrops"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonUploadCrops"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif"
            android:padding="14dp"
            android:text="TRANSLATE CROP"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- List Locations Button -->
        <Button
            android:id="@+id/buttonListPlaces"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonListCrops"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif"
            android:padding="14dp"
            android:text="ADD NEW LOCATION"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Manage Users TextView -->
        <TextView
            android:id="@+id/textViewManageUsers"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:text="@string/manageUsers"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewManageUsers"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif"
            android:padding="14dp"
            android:text="@string/logout"
            android:textColor="@color/bred"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
