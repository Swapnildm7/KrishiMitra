<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_farmer_dash"
    android:fitsSystemWindows="false">

    <!-- Fixed top part -->
    <LinearLayout
        android:id="@+id/fixedTopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <!-- App name and user profile image -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/userProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_profile"
                android:clipToOutline="true"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_farmer_profile" />

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:letterSpacing="0.05"
                android:text="@string/app_name"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="26sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Filter buttons with icons -->
        <LinearLayout
            android:id="@+id/cropFilterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Crops Filter Button with icon -->
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/bg_button"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="7dp">

                <ImageView
                    android:id="@+id/icon_crop_filter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/crops"
                    android:src="@drawable/ic_crop_filter" />

                <TextView
                    android:id="@+id/text_crop_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/crops"
                    android:textColor="@color/white"
                    android:textSize="21sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Location Filter Button with icon -->
            <LinearLayout
                android:id="@+id/buttonRefresh"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/bg_button"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="7dp">

                <ImageView
                    android:id="@+id/icon_refresh"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/refresh"
                    android:src="@drawable/ic_refresh" />

                <TextView
                    android:id="@+id/text_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/refresh"
                    android:textColor="@color/white"
                    android:textSize="21sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- RecyclerView for displaying crop cards -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cropImageRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="3dp"
        android:scrollbars="vertical" />

    <!-- Loading spinner (hidden by default) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />

</FrameLayout>
