<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_trader_dash"
    android:orientation="vertical">

    <!-- Header Layout with Title and Subtitle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="4dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal">

        <!-- Main Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KRISHI MITRA"
            android:textColor="@color/green"
            android:textSize="28sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:fontFamily="sans-serif-medium" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crop Listings"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="21sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="7dp" />
    </LinearLayout>

    <!-- Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:elevation="4dp"
        android:layout_margin="3dp"
        android:clipToPadding="false">

        <!-- RecyclerView for displaying listings -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listingsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingVertical="5dp"
            android:clipToPadding="false" />
    </LinearLayout>

</LinearLayout>
